{% extends 'base.html.twig' %}

{% block title %}Mon compte - Lady Fantastique{% endblock %}

{% block content %}
    <h1>Mon compte</h1>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="/admin">Vous êtes administrateur, accéder au backoffice</a><br/>
    {% endif %}
    <p>Bienvenue {{ app.user.firstname }} dans votre compte.<br/>
        C'est dans cet espace que vous allez pouvoir gérer toutes vos informations personnelles.</p><br/>
    <div class="text-right">
        <a class="btn-sm btn-dark" href="{{ path('app_logout') }}">Déconnexion</a></div>
    <hr>
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/padlock.png') }}" class="mb-3" height="150" alt="Modifier mon mot de passe"><br/>
                <a href="{{ path('account_password') }}" >Modifier mon mot de passe</a>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/location.png') }}" class="mb-3" height="150" alt="Gérer mes adresses"><br/>
                <a href="{{ path('account_address') }}">Gérer mes adresses</a>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/order-delivery.png') }}" class="mb-3" height="150" alt="Mes commandes"><br/>
                <a href="{{ path('account_order') }}">Mes commandes</a>
            </div>
        </div>
    </div>
    <hr>

{% endblock %}