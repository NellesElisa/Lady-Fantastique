                </figure>
            </article>
            <article class="col-lg-3 col-6 mx-auto">
                <figure class="position-relative rounded image-zoom">
                    <img class="cat img-fluid" src="assets/img/pierre.jpg" alt="">
                    <h2 id="h2-cat" class="text-white position-absolute">
                        {{ form_widget(form.categories.3) }}
                    </h2>
                </figure>
            </article>
            <article class="col-lg-3 col-6 mx-auto">
                <figure class="position-relative rounded image-zoom">
