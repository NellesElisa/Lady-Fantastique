                    <h2 id="h2-cat" class="text-white position-absolute">
                        {{ form_widget(form.categories.4) }}
                    </h2>
                </figure>
            </article>
            <div class="mx-auto pt-2 px-3 mb-3">
            {{ form_widget(form.rechercher) }}
